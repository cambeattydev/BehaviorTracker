<div class="modal" tabindex="-1" role="dialog" data-keyboard="false" id="@ElementId">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">@ModalText</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close" onclick="@OnCancel">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                @BodyHtml
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal" onclick="@OnCancel">Cancel</button>
                <button type="button" class="btn @(IsDelete ? "btn-danger" : "btn-primary")" data-dismiss="modal" onclick="@OnSubmit">@ConfirmText</button>
            </div>
        </div>
    </div>
</div>
@functions
{

    [Parameter] string ModalText { get; set; }
    
    [Parameter] string ConfirmText { get; set; }
    
    [Parameter] RenderFragment BodyHtml { get; set; }
    
    [Parameter] Action OnCancel { get; set; }
    
    [Parameter] Action OnSubmit { get; set; }
    
    [Parameter] bool IsDelete { get; set; }
    
    [Parameter] string ElementId { get; set; }

    public new void StateHasChanged()
    {
        base.StateHasChanged();
    }

}
